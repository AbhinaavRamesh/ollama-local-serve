# Development Dockerfile for Ollama Local Serve API
# Includes hot reloading support

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install development dependencies
RUN pip install --no-cache-dir watchfiles

# Copy application code
COPY ollama_local_serve/ ./ollama_local_serve/

# Environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PYTHONPATH=/app

# Expose API port
EXPOSE 8000

# Run with hot reloading
CMD ["python", "-m", "uvicorn", "ollama_local_serve.api.server:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
